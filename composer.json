{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "jvl/laravel-rate-limiter-plus",
    "type": "library",
    "description": "Advanced API rate limiting for Laravel: sliding window, token bucket, leaky bucket, flexible rules (geo/user/server load) and real-time monitoring.",
    "keywords": ["laravel", "rate limiting", "api", "throttle", "sliding window", "token bucket", "leaky bucket", "middleware"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/cache": "^12.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.5.3",
        "orchestra/testbench": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "RateLimiterPlus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "RateLimiterPlus\\Providers\\RateLimiterPlusServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
